<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/sign_up_page_update"
                            android:layout_width="205dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="87dp"
                            android:layout_marginEnd="118dp"
                            android:gravity="center"
                            android:text="Sign Up"
                            android:textColor="@color/design_default_color_primary"
                            android:textSize="40dp" />

                        <TextView
                            android:id="@+id/full_Name_textview_update"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/sign_up_page"
                            android:layout_marginBottom="-16dp"
                            android:padding="10dp"
                            android:text="Name"
                            android:textSize="30dp" />

                        <EditText
                            android:id="@+id/First_Name_edittext_update"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/phone_number_textview"
                            android:layout_marginBottom="16dp"
                            android:hint="Enter your full name"
                            android:autofillHints="name"/>

                        <TextView
                            android:id="@+id/phone_number_textview_update"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/phone_number_edittext"
                            android:layout_marginBottom="-16dp"
                            android:padding="10dp"
                            android:text="Phone Number"
                            android:textSize="30dp" />

                        <EditText
                            android:id="@+id/phone_number_edittext_update"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/church_textview"
                            android:layout_marginBottom="16dp"
                            android:hint="Enter your phone number"
                            android:inputType="phone"
                            android:digits="0123456789"/>

                        <TextView
                            android:id="@+id/church_textview_update"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/church_edittext"
                            android:layout_marginBottom="-16dp"
                            android:padding="10dp"
                            android:text="The Church"
                            android:textSize="30dp" />

                        <EditText
                            android:id="@+id/church_edittext_update"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/Email_textview"
                            android:layout_marginBottom="16dp"
                            android:hint="Enter the church" />

                        <TextView
                            android:id="@+id/Email_textview_update"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/email"
                            android:layout_marginBottom="-16dp"
                            android:padding="10dp"
                            android:text="Email"
                            android:textSize="30dp"
                            />

                        <EditText
                            android:id="@+id/email_update"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/password_textview"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginBottom="16dp"
                            android:ems="10"
                            android:hint="Enter your Email"
                            android:inputType="textEmailAddress"
                            />

                        <TextView
                            android:id="@+id/password_textview_update"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/password"
                            android:layout_marginBottom="-16dp"
                            android:padding="10dp"
                            android:text="Password"
                            android:textSize="30dp" />

                        <EditText
                            android:id="@+id/password_update"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/confirm_password"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginBottom="16dp"
                            android:ems="10"
                            android:hint="Password"
                            android:inputType="textPassword" />
                        <CheckBox
                            android:id="@+id/show_password"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_margin="0dp"
                            android:clickable="true"
                            android:text="show password"
                            />

                        <TextView
                            android:id="@+id/confirm_password_textview_update"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/password"
                            android:layout_marginBottom="-16dp"
                            android:padding="10dp"
                            android:text="Confirm Password"
                            android:textSize="30dp" />

                        <EditText
                            android:id="@+id/confirm_password_update"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/button_signup"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"

                            android:layout_marginBottom="25dp"
                            android:ems="10"
                            android:hint="Conferm Password"
                            android:inputType="textPassword" />

                        <CheckBox
                            android:id="@+id/show_confirm_password"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_margin="0dp"
                            android:clickable="true"
                            android:text="show password"/>

                        <Button
                            android:id="@+id/button_save_update"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="141dp"
                            android:layout_marginEnd="130dp"
                            android:layout_marginBottom="48dp"
                            android:onClick="button_signup"
                            android:text="Save Data" />

                        <Button
                            android:id="@+id/button_delete_record"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="141dp"
                            android:layout_marginEnd="130dp"
                            android:layout_marginBottom="48dp"
                            android:onClick="button_signup"
                            android:text="Delete Record" />
                </LinearLayout>
        </ScrollView>
</RelativeLayout>
